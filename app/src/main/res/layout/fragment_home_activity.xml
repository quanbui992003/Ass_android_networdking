<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/item"
        android:background="#D3A2A2"
        android:layout_alignParentTop="true">
    </androidx.appcompat.widget.Toolbar>
    <EditText
        android:id="@+id/edttimkiem"
        android:layout_below="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@+id/Toolbar"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/img"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"

                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <!-- ImageView để hiển thị ảnh nhỏ -->
                            <ImageView
                                android:id="@+id/myImageView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shape4"
                            />

                            <!-- Hình dạng bo tròn làm nền cho ImageView -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/lap_top"
                            />

                        </FrameLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LapTop"
                            android:gravity="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"

                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <!-- ImageView để hiển thị ảnh nhỏ -->
                            <ImageView
                                android:id="@+id/myImageView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shape4"
                            />

                            <!-- Hình dạng bo tròn làm nền cho ImageView -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/headphone"
                            />

                        </FrameLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Head"
                            android:gravity="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"

                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <!-- ImageView để hiển thị ảnh nhỏ -->
                            <ImageView
                                android:id="@+id/myImageView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shape4"
                            />


                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/smartphone"
                            />

                        </FrameLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="phone"
                            android:gravity="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="10dp"

                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp">

                            <!-- ImageView để hiển thị ảnh nhỏ -->
                            <ImageView
                                android:id="@+id/myImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shape4"
                            />

                            <!-- Hình dạng bo tròn làm nền cho ImageView -->
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@drawable/lap_top"
                            />

                        </FrameLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LapTop"
                            android:gravity="center"
                            android:textColor="@color/black"/>


                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SeeAll"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

<!--    <com.google.android.material.bottomnavigation.BottomNavigationView-->
